{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,

		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "types"
	},
	"include": ["src/*"]
}
